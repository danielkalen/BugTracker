mixin fieldsetInput(name, label, placeholder, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.input_text(class=classes)
    label.fields-fieldset-label(for=name)=label
    input.fields-fieldset-input.input(id=name, name=name, type="text", placeholder=placeholder, class=inputClasses)



mixin fieldsetSelect(name, label, placeholder, classes, required, items)
  - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.select(class=classes)
    label.fields-fieldset-label(for=name)=label
    select.fields-fieldset-select.input(id=name, name=name)
      option(value='')=placeholder
      -if (items)
        each item, index in items
          option(value=index)=item


mixin fieldsetTextarea(name, label, placeholder, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.textarea(class=classes)
    label.fields-fieldset-label(for=name)=label
    textarea.fields-fieldset-textarea.input(id=name, name=name, placeholder=placeholder)


mixin fieldsetCheckboxSingle(name, label, classes, required)
  - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.checkbox(class=classes)
    .fields-fieldset.fieldset-checkbox.input-button
      div.fields-fieldset-checkbox-box
      label.fields-fieldset-checkbox-label(for=name)=label
      input.input.checkbox(id=name, name=name type='checkbox')


mixin fieldsetCheckbox(name, label, classes, required, items)
  - if (required) classes = classes + ' required'
  - classes = classes + ' options_' + items.length

  .fields-fieldset.fieldset.checkbox(class=classes)
    .fields-fieldset-label=label
    each item, index in items
      - id = name + '_' + index
      .fields-fieldset-checkbox.input-button
        div.fields-fieldset-checkbox-box
        label.fields-fieldset-checkbox-label(for=id)=item
        input.input.checkbox(id=id, name=name, type='checkbox', val=item)


