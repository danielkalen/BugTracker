mixin fieldsetRange(name, label, classes, required)
  //- - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.range.required(class=classes)
    .fields-fieldset-label=label
    .fields-fieldset-range(class=classes)
      .fields-fieldset-range-start
      .fields-fieldset-range-end
    input.fields-fieldset-input.input(id=name, name=name, type="hidden")



mixin fieldsetFile(name, label, classes, required, inputClasses)
  - if (required) classes = classes + ' required'
  .fields-fieldset.fieldset.file(class=classes)
    label.fields-fieldset-label(for=name)=label
    .fields-fieldset-file_wrap
      input.fields-fieldset-file.input(id=name, name=name, type="file", class=inputClasses, accept='.pdf, .doc, .png, .tiff, .jpg, .rtf, .rtfd, .pages, .xls, .csv', multiple='')

